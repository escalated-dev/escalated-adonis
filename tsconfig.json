{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": [
    "index.ts",
    "configure.ts",
    "providers/**/*.ts",
    "src/**/*.ts",
    "config/**/*.ts",
    "start/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
